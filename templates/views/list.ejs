<head>
    <title>Board</title>
    <link rel="icon" href="/img/weather.png">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
</head>

<%- include('../partials/header') %>
<br>

<div class="button_cont" align="right"><a class="example_f" href="/board/write" rel="nofollow"><button class="btn btn-outline-secondary">Add New Post</button></a></div>
<br><br>
<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Writer</th>
      </tr>
    </thead>
    <tbody>
                <% if(board === null){ %>
                    <tr>
                        <td colspan=2> There is no data to show </td>
                    </tr>
                <% } %>
                <% board.forEach(function(board){ %>
                <tr>
                   <td>
                       <a href="/board/<%=board._id%>"><%= board.title %></a>
                   </td>
                   <td>
                       <%=board.board_date%>
                   </td>
                   <td>
                    <%=board.author.name%>
                </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
     

<%- include('../partials/footer') %>
